<%- include('partials/header') %>

<div class="jumbotron jumbotron-fluid heading-container">
    <div class="container-fluid">
        <h1>MATHS BY CLASS</h1>
    </div>
</div>
<div class="container">
    
    <div class="row" style="margin-left: 2%; margin-right: 2%;">
        <div class="col-md-3 forClass7">
            <a>
                <img class="link-images fadedImage" src="https://www.koolsmartlearning.com/wp-content/uploads/2019/01/Class-7.jpg">
                <p class="img-text">Class 7</p>
            </a>
        </div>
        <div class="col-md-3 forClass8">
            <a>
                <img class="link-images fadedImage" src="https://www.koolsmartlearning.com/wp-content/uploads/2019/01/Class-8.jpg" style="opacity: 50%;">
                <p class="img-text">Class 8</p>
            </a>
        </div>
        <div class="col-md-3 forClass9">
            <a>
                <img class="link-images fadedImage" src="https://www.koolsmartlearning.com/wp-content/uploads/2019/01/Class-9.jpg" style="opacity: 50%;">
                <p class="img-text">Class 9</p>
            </a>
        </div>
        <div class="col-md-3 forClass10">
            <a>
                <img class="link-images fadedImage" src="https://www.koolsmartlearning.com/wp-content/uploads/2019/01/Class-10.jpg" style="opacity: 50%;">
                <p class="img-text">Class 10</p>
            </a>
        </div>
    </div>
    <div class="row" style="background-color: #ebb223; margin: 2% 0;">
        <div class="col-md-6" style="text-align: left; padding-left: 4%;">
            <h1 id="currentClass">Class 7</h1>
        </div>
        <div class="col-md-6" style="text-align: right; padding-right: 4%;">
            <h1 id="numberOfVideos">xyz Videos</h1>
            <input type="hidden" id="preselectedTopic" value="<%=preselectedTopic%>">
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <div class="sidenav">
                <p class="topicHeading" style="color: blue;">TOPICS</p>
                <div class="forTopics">
                    <% topics.forEach(function(topic){ %>
                        <a class="topic"><%=topic%></a>
                        <hr>
                    <% }) %>
                </div>
            </div>
        </div>
        <div class="col-md-10">
            <h1 id="topicName">Hi theree</h1>
            <div class="row" id="videos">      
            </div>
    </div>
</div>
</div>







